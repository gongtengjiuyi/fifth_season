<view class="menu">
    <view class="chapters">
        <view class="item" wx:for="{{chapterlist.chapters}}" wx:key="index">
            <text>{{item.chapterTitle}}</text>
        </view>
    </view>
     <view class="bottom">
        <view class="front same" bind:tap="minipages">
            <van-icon name="arrow-left" />
            <text>上一页</text>
        </view>
        <navigator url="../menu/menu?sourceId={{content.sourceId}}&chapterId={{content.chapterId}}">
            <view class="menu same">
                <van-icon name="coupon-o" />
                <text>目录</text>
            </view>
        </navigator>
        <view class="next same" bind:tap="addpages">
            <text>下一页</text>
            <van-icon name="arrow" />
        </view>
    </view>
</view>